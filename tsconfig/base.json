{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "../dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "target": "ES2015",
    "types": ["jest", "node", "react"]
  },
  "exclude": ["node_modules"],
  "include": ["../src/**/*", "../DEV_ONLY/*"]
}
